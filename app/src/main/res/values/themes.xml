<resources>
    <!-- Base application theme. -->
    <style name="Theme.Doubean" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/doubean_green</item>
        <item name="colorSurface">@color/doubean_white</item>
        <item name="colorSecondary">@color/douban_yellow</item>
        <item name="colorOnPrimary">@color/doubean_black</item>
        <item name="colorOnSecondary">@color/doubean_black</item>
        <item name="colorOnSurface">@color/doubean_black</item>
        <item name="colorOnBackground">@color/doubean_black</item>
    </style>

    <style name="Theme.Doubean.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="appBarLayoutStyle">@style/Widget.Doubean.AppbarLayout</item>
        <item name="toolbarStyle">@style/Widget.Douban.Toolbar</item>
    </style>


</resources>